{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2020",
    "lib": [
      "es2020"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "checkJs": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": false,
    "alwaysStrict": true,
    // "declaration": true,
    // "declarationMap": true,
    "strict": true,
    "strictNullChecks": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
    ]
  },
  "include": [
    "**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}
